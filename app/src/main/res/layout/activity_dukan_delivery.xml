<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.DukanDeliveryActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Store Delivery Details"
                android:textColor="#FAF6F6"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/order"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:text="Warehouse Information" />

            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView36"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/warehouse" />

                <EditText
                    android:id="@+id/warehouseName"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textSize="18sp"
                    android:paddingStart="8dp"
                    android:background="@drawable/white_background3"
                    android:inputType="text"
                    android:hint="Enter Warehouse name"
                    android:textColor="@color/black"
                     />
            </LinearLayout><LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView37"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/contact" />

                <EditText
                    android:id="@+id/contactName"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textSize="18sp"
                    android:paddingStart="8dp"
                    android:background="@drawable/white_background3"
                    android:inputType="text"
                    android:hint="Enter full name"
                    android:textColor="@color/black"
                     />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView38"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/number2" />

                <EditText
                    android:id="@+id/mobileNumber"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textSize="18sp"
                    android:paddingStart="8dp"
                    android:background="@drawable/white_background3"
                    android:inputType="phone"
                    android:hint="Enter mobile number"
                    android:textColor="@color/black"
                     />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView39"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/flatno" />

                <EditText
                    android:id="@+id/flatNumber"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textSize="18sp"
                    android:paddingStart="8dp"
                    android:background="@drawable/white_background3"
                    android:inputType="text"
                    android:hint="Enter flat, house no..."
                    android:textColor="@color/black"
                     />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView40"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Area" />

                <EditText
                    android:id="@+id/Area"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textSize="18sp"
                    android:paddingStart="8dp"
                    android:background="@drawable/white_background3"
                    android:inputType="text"
                    android:hint="Enter area, colony..."
                    android:textColor="@color/black"
                     />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView41"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pin" />

                <EditText
                    android:id="@+id/pinCode"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textSize="18sp"
                    android:paddingStart="8dp"
                    android:background="@drawable/white_background3"
                    android:inputType="number"
                    android:hint="Enter Pin Code"
                    android:textColor="@color/black"
                     />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView42"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/City" />

                <EditText
                    android:id="@+id/City"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textSize="18sp"
                    android:paddingStart="8dp"
                    android:background="@drawable/white_background3"
                    android:inputType="text"
                    android:hint="Enter City"
                    android:textColor="@color/black"
                     />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView44"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/state" />
                    
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/state"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Enter State"
                        android:textColor="@color/black"
                        android:background="@drawable/white_background3"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="108dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView45"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/GST" />

                <EditText
                    android:id="@+id/gstNumber"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textSize="18sp"
                    android:paddingStart="8dp"
                    android:background="@drawable/white_background3"
                    android:inputType="text"
                    android:hint="Enter GST Number"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/white_curve_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">


            <CheckBox
                android:id="@+id/checkBoxAcceptTerms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I accept all " />
            <TextView
                android:id="@+id/textView46"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_blue_dark"
                android:text="terms &amp; conditions" />
        </LinearLayout>




        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/updateData"
            android:background="@drawable/ship_btn_bg"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:text="Update"
            android:layout_marginBottom="8dp"
             />
    </LinearLayout>
</RelativeLayout>