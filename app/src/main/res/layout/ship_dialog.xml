<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:src="@drawable/remove"
        android:layout_gravity="center|top"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:text="Ship Order Via"
            android:padding="8dp"
            android:textColor="@color/green"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:textSize="25dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clear"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="8dp"
            android:id="@+id/cancelButton"/>

    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/shiprocket"
            android:background="@drawable/bakcground_order"
            android:layoutDirection="rtl"
            android:layout_marginTop="24dp"
            android:textColor="@color/green"
            android:textSize="16sp"
            android:padding="10dp"/>

        <RadioButton
            android:layout_marginTop="24dp"
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ship"
            android:text="Self-ship"
            android:background="@drawable/bakcground_order"
            android:textColor="@color/black"
            android:drawablePadding="8dp"
            android:textSize="18sp"
            android:layoutDirection="rtl"
            android:padding="10dp"/>
    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/proceedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ship_btn_bg"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:paddingStart="36dp"
        android:elevation="8dp"
        android:paddingEnd="36dp"
        android:text="Proceed"/>
</LinearLayout>